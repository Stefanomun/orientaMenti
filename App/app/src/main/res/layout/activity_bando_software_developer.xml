<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sfondoMarrone"
    tools:context=".studente.BandoSoftwareDeveloper">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="indietro"
        android:src="@drawable/undo" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:popupTheme="@style/menuHam"
        app:collapseIcon="@drawable/menu"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/menu"
        android:onClick="menu"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo"
        android:onClick="home"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/border"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/times_new_roman_bold"
            android:text="Software Developer"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/bando1" />

                <RelativeLayout
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="85dp"
                    android:background="@drawable/button_border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/times_new_roman_bold"
                        android:text="Indetto da:"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/times_new_roman"
                        android:text="Meta"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="60dp"
                        android:fontFamily="@font/times_new_roman_bold"
                        android:text="Descrizione posizione"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="82dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/times_new_roman"
                        android:text="Meta cerca un software developer da aggiungere al proprio organico. In particolare, si cerca uno sviluppatore da aggiungere al gruppo di lavoro della sezione Instagram"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="260dp"
                    android:orientation="vertical"
                    android:background="@drawable/button_border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/times_new_roman_bold"
                        android:text="Competenze richieste"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/circle"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/times_new_roman"
                            android:layout_marginLeft="5dp"
                            android:textSize="18dp"
                            android:text="Laurea L-31 o Laurea magistrale LM-18"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/circle"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/times_new_roman"
                            android:layout_marginLeft="5dp"
                            android:textSize="18dp"
                            android:text="Java"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/circle"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/times_new_roman"
                            android:layout_marginLeft="5dp"
                            android:textSize="18dp"
                            android:text="Android Studio"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/circle"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/times_new_roman"
                            android:layout_marginLeft="5dp"
                            android:textSize="18dp"
                            android:text="C/C++"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="390dp"
                    android:orientation="vertical"
                    android:background="@drawable/button_border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/times_new_roman_bold"
                        android:text="Competenze richieste"
                        android:textColor="@color/black"
                        android:textSize="20dp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/circle"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/times_new_roman"
                            android:layout_marginLeft="5dp"
                            android:textSize="18dp"
                            android:text="Laurea L-31 o Laurea magistrale LM-18"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/circle"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/times_new_roman"
                            android:layout_marginLeft="5dp"
                            android:textSize="18dp"
                            android:text="Java"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/circle"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/times_new_roman"
                            android:layout_marginLeft="5dp"
                            android:textSize="18dp"
                            android:text="Android Studio"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/circle"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/times_new_roman"
                            android:layout_marginLeft="5dp"
                            android:textSize="18dp"
                            android:text="C/C++"
                            android:textColor="@color/black"/>

                    </LinearLayout>



                </LinearLayout>



                <Button
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="400dp"
                    android:background="@drawable/button3"
                    android:text="Visualizza bandi attivi"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/times_new_roman_bold"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>